{
  "name": "@conductus-labs/baton-agents",
  "version": "0.1.1",
  "description": "Baton Framework Agent and Cognitive Definitions",
  "type": "module",
  "files": [
    "src/**/*.md",
    "src/**/*.yml",
    "scripts"
  ],
  "exports": {
    "./agents/*": "./src/agents/*",
    "./patterns/*": "./src/patterns/*",
    "./inventory": "./src/baton-agents-inventory.yml"
  },
  "scripts": {
    "lint:yaml": "yamllint 'src/**/*.yml'",
    "lint:markdown": "markdownlint 'src/**/*.md'",
    "lint:all": "npm run lint:yaml && npm run lint:markdown",
    "clean": "rm -rf node_modules package-lock.json && rm -rf ./dist",
    "package": "mkdir -p dist && npm pack --pack-destination dist",
    "postinstall": "node scripts/postinstall.cjs"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.46.0",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "baton",
    "framework",
    "ai",
    "agent",
    "agent-definitions"
  ],
  "author": "Conductus Labs Ltd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Conductus-Labs/baton-agents.git",
    "directory": "/"
  }
}
